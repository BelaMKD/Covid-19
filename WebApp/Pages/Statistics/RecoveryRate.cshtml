@page
@model WebApp.Pages.Statistics.RecoveryRateModel
@{
    var XLabels = Newtonsoft.Json.JsonConvert.SerializeObject(Model.RecoveryRate.Select(x => x.Recovered).ToList());
    var YValues = Newtonsoft.Json.JsonConvert.SerializeObject(Model.RecoveryRate.Select(x => x.TotalPatients).ToList());
    ViewData["Title"] = "RecoveryRate";
}


@section Styles{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
}

<h2>Male Female Ratio Statistics</h2>

<ul class="list-inline justify-content-between">
    <li class="list-inline-item">
        <a asp-page="./Statistic">Per Cities</a>
    </li>
    <li class="list-inline-item">
        <a asp-page="./MaleFemale">Male:Female</a>
    </li>
    <li class="list-inline-item">
        <a asp-page="./InHospital">In Hospital</a>
    </li>
    <li class="list-inline-item">
        <a asp-page="./GroupByAge">By Age</a>
    </li>
    <li class="list-inline-item">
        <a asp-page="./RecoveryRate">Recovery Rate</a>
    </li>
</ul>

<div class="box-body">

    <div class="chart-container">
        <canvas id="chart" style="width:100%; height:500px"></canvas>
    </div>

</div>


@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <script type="text/javascript">

        $(function () {
    var chartName = "chart";
        var ctx = document.getElementById(chartName).getContext('2d');
        var data = {
                labels: @Html.Raw(XLabels),
                datasets: [{
                    label: "Drinks Chart",
                    backgroundColor: [
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)'

                    ],
                    borderColor: [
                        'rgba(75, 192, 192, 1)',
                        'rgba(255,99,132,1)'

                    ],
                    borderWidth: 1,
                    data: @Html.Raw(YValues)
    }]
            };

var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: true,
                            color: "rgba(255,99,164,0.2)"
                        }
}],
                    xAxes: [{
                        ticks: {
                            min: 0,
                            beginAtZero: true
                        },
                        gridLines: {
                            display: false
                        }
                    }]
                }
            };

       var myChart = new  Chart(ctx, {
                options: options,
                data: data,
                type:'pie'

            });
        });
    </script>



}