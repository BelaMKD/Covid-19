@page
@model WebApp.Pages.Patients.AddPatientModel
@{
    ViewData["Title"] = "AddPatient";
}

<h2>Add Patient to Hospital</h2>

<form method="post">
    <input type="hidden" asp-for="Patient.Id" />

    <div class="form-group">
        <label asp-for="Patient.Name"></label>
        <input class="form-control" asp-for="Patient.Name" />
    </div>

    <div class="form-group">
        <label asp-for="Patient.Gender"></label>
        <select class="form-control" asp-for="Patient.Gender" asp-items="@Model.SelectGender">
            <option value="">Select Gender</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Patient.BirthDate"></label>
        <input class="form-control" asp-for="Patient.BirthDate" />
    </div>

    <div class="form-group">
        <label asp-for="Patient.City"></label>
        <input class="form-control" asp-for="Patient.City" />
    </div>

    <div class="form-group">
       <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-page="/Hospitals/HospitalList">Back</a>
    </div>


</form>

