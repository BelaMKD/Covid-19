@page
@model WebApp.VirusEditModel
@{
    ViewData["Title"] = "VirusEdit";
    string ime = string.Empty;
}

    <form method="post">
        <input type="hidden" asp-for="Virus.Id" />
        <div class="form-group">
            <label asp-for="Virus.Name"></label>
            <input class="form-control" asp-for="Virus.Name" />
        </div>

        <div class="form-group">
            <label asp-for="Virus.VirusDescription"></label>
            <textarea class="form-control" asp-for="Virus.VirusDescription" rows="3"></textarea>
        </div>
        @for (int i = 0; i < Model.Symptomss.Count(); i++)
        {

            <input type="hidden" asp-for="Symptomss[i].Value" />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Symptomss[i].Selected" />
                <label class="form-check-label">@Model.Symptomss[i].Text</label>
            </div>
            <input type="hidden" asp-for="Symptomss[i].Text" />
        }
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-primary" asp-page="./HospitalList">Back</a>
        </div>
    </form>

