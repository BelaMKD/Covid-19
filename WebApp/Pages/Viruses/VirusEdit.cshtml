@page
@model WebApp.VirusEditModel
@{
    ViewData["Title"] = "VirusEdit";
    string ime = string.Empty;
}

    <form method="post">
        <input type="hidden" asp-for="Virus.Id" />
        <div class="form-group">
            <label asp-for="Virus.Name"></label>
            <input class="form-control" asp-for="Virus.Name" />
        </div>

        <div class="form-group">
            <label asp-for="Virus.VirusDescription"></label>
            <textarea class="form-control" asp-for="Virus.VirusDescription" rows="3"></textarea>
        </div>


        @for (int i = 0; i < Model.Symptoms.Count(); i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="Symptoms[i].Id" />
                <input class="form-check-input" type="checkbox" asp-for="Symptoms[i].IsSelected">
                <label class="form-check-label">@Model.Symptoms[i].Name</label>
            </div>
        }


        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save</button>
            <a class="btn btn-primary" asp-page="./VirusList">Back</a>
        </div>

    </form>

