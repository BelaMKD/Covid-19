@page
@model WebApp.Pages.Hospitals.HospitalEditModel
@{
    ViewData["Title"] = "HospitalEdit";
    var CreateEdit = Model.Hospital.Id > 0 ? "Edit" : "Create";
}

<h2>@CreateEdit Hospital</h2>

<form method="post">

    <input type="hidden" asp-for="Hospital.Id" />

    <div class="form-group">
        <label asp-for="Hospital.Name"></label>
        <input class="form-control" asp-for="Hospital.Name" />
    </div>

    <div class="form-group">
        <label asp-for="Hospital.City"></label>
        <input class="form-control" asp-for="Hospital.City" />
    </div>

    <div class="form-group">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-primary" asp-page="./HospitalList">Back</a>
    </div>

</form>

